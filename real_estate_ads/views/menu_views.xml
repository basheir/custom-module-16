<!-- views/menu_views.xml -->
<odoo>
    <!-- Define the action for the estate.property model -->
    <record id="action_property" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create the first property!
            </p>
        </field>
    </record>

    <!-- Root Menu Item -->
    <menuitem id="menu_real_estate_root" name="Real Estate" sequence="10"/>

    <!-- Submenu Item -->
    <menuitem id="menu_property" name="Properties" parent="menu_real_estate_root" action="action_property" sequence="1"/>
</odoo>
